{
  "name": "overtrue/laravel-uploader",
  "description": "An upload component for Laravel.",
  "authors": [
    {
      "name": "overtrue",
      "email": "i@overtrue.me"
    }
  ],
  "require": {
    "laravel/framework": "^9.0|^10.0",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Overtrue\\LaravelUploader\\": "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "brainmaestro/composer-git-hooks": "dev-master",
    "laravel/pint": "^1.5",
    "mockery/mockery": "^1.5"
  },
  "extra": {
    "laravel": {
      "providers": [
        "\\Overtrue\\LaravelUploader\\UploadServiceProvider"
      ],
      "aliases": {
        "LaravelUploader": "\\Overtrue\\LaravelUploader\\LaravelUploader"
      }
    },
    "hooks": {
      "pre-commit": [
        "composer test",
        "composer check-style"
      ],
      "pre-push": [
        "composer test",
        "composer fix-style"
      ]
    }
  },
  "scripts": {
    "post-update-cmd": [
      "cghooks update"
    ],
    "post-merge": "composer install",
    "post-install-cmd": [
      "cghooks add --ignore-lock",
      "cghooks update"
    ],
    "cghooks": "vendor/bin/cghooks",
    "check-style": "vendor/bin/pint --test",
    "fix-style": "vendor/bin/pint",
    "test": "vendor/bin/phpunit --colors=always"
  },
  "scripts-descriptions": {
    "test": "Run all tests.",
    "check-style": "Run style checks (only dry run - no fixing!).",
    "fix-style": "Run style checks and fix violations."
  },
  "license": "MIT"
}
